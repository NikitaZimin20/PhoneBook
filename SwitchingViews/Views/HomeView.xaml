<UserControl x:Class="SwitchingViews.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwitchingViews.Views" xmlns:viewmodels="clr-namespace:SwitchingViews.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="373*"/>
            <ColumnDefinition Width="160*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <TextBlock
            Text="Anton's and Nikita's PhoneBook"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            
            Grid.ColumnSpan="2"
            FontSize="30" 
            Height="39" 
            FontFamily="Bahnschrift Condensed"
            
            />
        <Button Grid.Column="1" Grid.Row="1" Command="{Binding NavigateAccountCommand }" >

        </Button>
    </Grid>
</UserControl>
